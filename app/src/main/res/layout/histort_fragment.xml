<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/alex_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/alex_main_image"
            android:scaleType="centerCrop"
            android:src="@drawable/alex_main_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/alex_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:contentDescription="@string/alex_flag"
            android:elevation="@dimen/s_space"
            android:src="@drawable/alex_flag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_space"
            android:gravity="center"
            android:text="@string/alex_title"
            android:textColor="#000000"
            android:textSize="@dimen/x_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/alex_flag"
            app:layout_constraintStart_toStartOf="@+id/alex_flag"
            app:layout_constraintTop_toBottomOf="@+id/alex_flag" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/l_space"
            android:gravity="center"
            android:text="@string/alex_bio_1"
            android:textColor="#000000"
            android:textSize="@dimen/m_size"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/l_space"
            android:layout_marginBottom="@dimen/l_space"
            android:gravity="center"
            android:text="@string/alex_bio_1"
            android:textColor="#000000"
            android:textSize="@dimen/m_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
